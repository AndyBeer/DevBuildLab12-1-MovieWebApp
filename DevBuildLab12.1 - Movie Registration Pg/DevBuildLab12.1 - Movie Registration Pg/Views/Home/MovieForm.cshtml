@{
    ViewData["Title"] = "Movie Submission Form";
}

<h1>@ViewData["Title"]</h1>

<form action="Result">
    <p>Movie ID#</p>
    <input type="number" min="1" name="MovieID" required />


    <p>Movie Title</p>
    <input type="text" maxlength="50" name="Title" required />

    <p>Genre</p>
    <!--input type="text" name="Genre" required />-->
    <label for="Genre">Select a Genre: </label>
    <select name="Genre">
        <option disabled selected value="default">--Select Genre--</option>
        <option value="Action">Action</option>/>
        <option value="Animated">Animated</option>/>
        <option value="Comedy">Comedy</option>/>
        <option value="Drama">Drama</option>/>
        <option value="Horror">Horror</option>/>
        <option value="Romance">Romance</option>/>
        <option value="Sci-fi">Sci-fi</option>/>

    </select>

    <p>Year of Release</p>
    <input type="date" name="Year" min="1880-01-01" max="2021-12-31" required />

    <p>Main Actor</p>
    <input type="text" name="Actor" required />

    <p>Director</p>
    <input type="text" name="Director" required />

    <input type="submit" />

</form>
